{% extends 'base.html.twig' %}

{% block title %}Empresa index{% endblock %}

{% block body %}
    <h1>Empresa index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Mision</th>
                <th>Vision</th>
                <th>ObjetoSocial</th>
                <th>Telefono</th>
                <th>Director</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
                <td>{{ empresa.id }}</td>
                <td>{{ empresa.nombre }}</td>
                <td>{{ empresa.direccion }}</td>
                <td>{{ empresa.mision }}</td>
                <td>{{ empresa.vision }}</td>
                <td>{{ empresa.objetoSocial }}</td>
                <td>{{ empresa.telefono }}</td>
                <td>{{ empresa.director }}</td>
                <td>
                    <a href="{{ path('app_empresa_show', {'id': empresa.id}) }}">show</a>
                    <a href="{{ path('app_empresa_edit', {'id': empresa.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_empresa_new') }}">Create new</a>
{% endblock %}
